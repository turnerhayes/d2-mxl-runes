{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "DOM"
    ],
    "module": "ES6",
    "sourceMap": true,
    "outDir": "dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "files": [
    "src/browser.mts"
  ]
}
